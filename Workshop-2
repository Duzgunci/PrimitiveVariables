list<string> Cars= new List <string>{'Tesla','Toyota','Honda','Nissan'};
Integer size= Cars.size();
system.debug ('My list size is:'+size);
string str=Cars.get(1);  
system.debug('Using get(index) -  2nd Car is: '+str); 
Cars.indexof();
Integer result = Cars.indexOf('Toyota');
System.debug(result);
Cars.set(1, 'Mercedes');
system.debug(Cars);
Cars.remove(1);
system.debug(Cars);
Cars.clear();  
system.debug('Using clear() - Cars List : '+Cars);
list<string> colors= new List <string>{'Blue','Pink','Red','Black'};
system.debug ('My colors are:'+colors);
Integer size1= colors.size();
system.debug ('My list size is:'+size1);
colors.remove(1);
system.debug(colors);
colors.clear();
system.debug('My colors are now:'+colors);

Map <string>capitalCountry= new map<string,string>();
capitalCountry.put('Turkey', 'Ankara');
capitalCountry.put('USA', 'Washington');
capitalCountry.put('Germany', 'Berlin');
capitalCountry.put('Canada', 'Ottawa');
system.debug(capitalCountry);
system.debug(capitalCountry.keySet());
system.debug(capitalCountry.size());
capitalCountry.remove('Turkey');
system.debug(capitalCountry);
Map <string,string> centerCountry= capitalCountry.clone();
system.debug(centerCountry);
system.debug('The Capital of Germany' +centerCountry.get('Germany'));
centerCountry.clear();
system.debug(centerCountry);
